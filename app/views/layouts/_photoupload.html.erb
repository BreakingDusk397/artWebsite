<%= form_for @picture do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :date %>
    <%= f.date_field :date %>    

    <%= f.label :picture %>
    <%= f.file_field :picture, accept: "image/png, image/jpeg" %>

    <%= f.submit%> 
<% end %>